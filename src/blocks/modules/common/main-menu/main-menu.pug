mixin main-menu(data)
  .main-menu
    .main-menu__wrp
      .main-menu__close
      .main-menu__nav
        nav
          ul
            each item in data
              li: a(href=item.href)= item.text
      .main-menu__phones
        .main-menu__number: a(href='#') +7 495 799 34 99
        .main-menu__worktime: span Работаем с 9.00 до 19.00
      .main-menu__msgr
        ul
          li.ic_wa: a(href='#'): +icons('#ic_wa')
          li.ic_tg: a(href='#'): +icons('#ic_tg')

mixin main-menu-jk(data)
  .main-menu
    .main-menu__wrp
      .main-menu__close
      .main-menu__logo
        a(href='')
          img(src="/img/common/logo-jk.png")
          span ЖК Allegoria Mosca
      .main-menu__nav
        nav
          ul
            each item in data
              li: a(href=item.link)= item.text
      .main-menu__address
        address Москва, 4-6, улица Остоженка 
        a(href='tel:+7(495)085-16-64') +7 (495) 085-16-64
      .main-menu__callback
        button.btn.btn-line Заказать звонок
