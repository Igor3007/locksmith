include ../../components/video/video.pug

mixin video-block
  section.section-video-block
    .container.container--large
      .video-block
        .video-block__player
          +video({
            link: 'https://www.youtube.com/watch?v=7_-iNufEXsM',
            preview: '/img/common/video-preview',
            title: 'Video about our work',
          })
        .video-block__contact: +aside-contact()

mixin video-block-about
  section.section-video-block
    .container.container--large
      .video-block
        .video-block__player
          +video({
            link: 'https://www.youtube.com/watch?v=7_-iNufEXsM',
            preview: '/img/common/video-preview',
            title: 'Video about our work',
          })
        .video-block__contact: +aside-list()

mixin aside-list
  .aside-list
    .aside-list__subtitle What you get from us
    .aside-list__list
      ul
        li We tell you the exact cost before beginning any job.
        li A quality & efficient service using only the best 
        li Quality materials for all jobs.
        li An emergency locksmith committed to hard work.
        li A quality of service you can rely on.



mixin aside-contact()
  .aside-contact
    .aside-contact__alltime
      +icons('#ic_call24red', 63)
      span Service call

    .aside-contact__worktime
      .item-worktime
        .item-worktime__hour 8:30 AM - 7:00 PM
        .item-worktime__cost $95 + tax
      .item-worktime
        .item-worktime__hour 7:00 PM - 8:30 AM
        .item-worktime__cost $250 + tax

    .aside-contact__note In case of cancellation after 7 pm you will be charged for service call.
    .aside-contact__btn
      button.btn Contact